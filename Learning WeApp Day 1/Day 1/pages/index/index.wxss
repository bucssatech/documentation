/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.counter {
  width: 250rpx;
  height: 70rpx;
  position: relative;
  top: 100px;
  display: block;
  color: rgb(167, 196, 250);
  font-weight: bold;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 3rpx solid rgb(167, 196, 250);
}


.button{
  width: 250rpx;
  height: 70rpx;
  position: relative;
  top: 150px;
  display: block;
  color: #fff;
  font-weight: bold;
  line-height: 70rpx;
  text-align: center;
  background: rgb(167, 196, 250);
  border-radius: 10rpx;
}